<script type="text/javascript">
    //마크업 문자열 샘플
    var sampleHtml = $('#template').html(),
        count = 0;
    var targetHtml = document.getElementById("infinite-list");

    /**
     * 테스트를 위해 마크업 생성하는 메서드
     * @returns {string}
     */
    function getHtml() {
        count += 1;
        return '<h2>' + count + '</h2>' + sampleHtml;
    }

    //테스트 위해 버튼 이벤트 바인딩
    $('#append').on('click', function(){
    	targetHtml.innerHTML = targetHtml.innerHTML + ([getHtml()]);
    });
    $('#prepend').on('click', function(){
    	targetHtml.innerHTML = ([getHtml()]) + targetHtml.innerHTML;
    });
    $('#clear').on('click', function(){
    	targetHtml.innerHTML = "";
    });
</script>
